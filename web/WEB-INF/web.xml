<?xml version="1.0" encoding="UTF-8"?>

<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
			http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    id="WebApp_ID"
    version="3.0">

    <servlet>
        <servlet-name>HousingEdit</servlet-name>
        <servlet-class>swapHome.housing.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HousingEdit</servlet-name>
        <url-pattern>/housing/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HousingDelete</servlet-name>
        <servlet-class>swapHome.housing.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HousingDelete</servlet-name>
        <url-pattern>/housing/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HousingCreate</servlet-name>
        <servlet-class>swapHome.housing.CreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HousingCreate</servlet-name>
        <url-pattern>/housing/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserRegister</servlet-name>
        <servlet-class>swapHome.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegister</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAuth</servlet-name>
        <servlet-class>swapHome.user.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAuth</servlet-name>
        <url-pattern>/user/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAdmin</servlet-name>
        <servlet-class>swapHome.user.admin.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAdmin</servlet-name>
        <url-pattern>/user/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAdminInfo</servlet-name>
        <servlet-class>swapHome.user.admin.InfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAdminInfo</servlet-name>
        <url-pattern>/user/admin/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserAdminHousing</servlet-name>
        <servlet-class>swapHome.user.admin.HousingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAdminHousing</servlet-name>
        <url-pattern>/user/admin/housing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserHome</servlet-name>
        <servlet-class>swapHome.user.home.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHome</servlet-name>
        <url-pattern>/user/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserHomeInfo</servlet-name>
        <servlet-class>swapHome.user.home.InfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHomeInfo</servlet-name>
        <url-pattern>/user/home/info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserHomeHousing</servlet-name>
        <servlet-class>swapHome.user.home.HousingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHomeHousing</servlet-name>
        <url-pattern>/user/home/housing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserHomeHousingOffers</servlet-name>
        <servlet-class>swapHome.user.home.HousingOffersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserHomeHousingOffers</servlet-name>
        <url-pattern>/user/home/offers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>swapHome.user.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
	<servlet>
		<servlet-name>Disconnect</servlet-name>
		<servlet-class>swapHome.user.DisconnectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Disconnect</servlet-name>
		<url-pattern>/user/disconnect</url-pattern>
	</servlet-mapping>
	<jsp-config>

	<jsp-property-group>

		<description>Config. de l'encodage des pages JSP</description>

		<url-pattern>*.jsp</url-pattern>

		<page-encoding>UTF-8</page-encoding>

	</jsp-property-group>

</jsp-config>

</web-app>
